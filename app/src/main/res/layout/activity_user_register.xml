<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".User_Register"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:contentDescription="@string/des_JC"
                android:src="@drawable/new_logo_app" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="272dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textColor="@color/fnt_color" />

            <EditText
                android:id="@+id/email"
                android:layout_width="272dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="yes"
                android:background="@drawable/edittext_round_corners"
                android:ems="10"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/btn_text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="272dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="@string/username"
                android:textColor="@color/fnt_color" />

            <EditText
                android:id="@+id/username"
                android:layout_width="272dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="yes"
                android:background="@drawable/edittext_round_corners"
                android:ems="10"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/btn_text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="272dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:text="@string/password"
                android:textColor="@color/fnt_color" />

            <EditText
                android:id="@+id/password"
                android:layout_width="272dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="yes"
                android:background="@drawable/edittext_round_corners"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/btn_text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="41dp" />

            <Button
                android:id="@+id/btn_userphoto"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_off"
                android:textColor="@color/btn_text"
                android:text="@string/user_picture" />

            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/borders_layouts"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                tools:srcCompat="@tools:sample/avatars" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="49dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_off"
                android:text="@string/sign_up"
                android:textColor="@color/btn_text" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>